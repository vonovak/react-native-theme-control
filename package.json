{
  "name": "@vonovak/react-native-theme-control",
  "version": "7.0.1",
  "description": "control the platform theme from react native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && yarn run build:plugin",
    "release": "yarn prepare && npx semantic-release",
    "android": "npx react-native run-android",
    "start": "npx patch-package && npx react-native start --reset-cache",
    "ios": "npx react-native run-ios",
    "pods": "cd example && RCT_NEW_ARCH_ENABLED=1 pod-install --quiet",
    "xed": "xed example/ios",
    "build:plugin": "tsc --build plugin",
    "clean:plugin": "expo-module clean plugin",
    "docs": "typedoc --plugin typedoc-plugin-markdown"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/vonovak/react-native-theme-control",
  "author": "vonovak <vonovak@gmail.com> (https://github.com/vonovak)",
  "homepage": "https://www.npmjs.com/package/@vonovak/react-native-theme-control",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@react-native-community/cli": "^18.0.0",
    "@react-native-community/datetimepicker": "^8.4.2",
    "@react-native-menu/menu": "^1.2.3",
    "@react-native-segmented-control/segmented-control": "^2.5.7",
    "@react-native/eslint-config": "^0.79.5",
    "@react-native/metro-config": "^0.79.5",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@semantic-release/git": "^10.0.1",
    "@types/glob": "^9.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commitlint": "^19.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.1",
    "expo": "^53.0.17",
    "expo-module-scripts": "^4.1.9",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "pod-install": "^0.3.10",
    "prettier": "^3.6.2",
    "react": "19.0.0",
    "react-native": "^0.79.5",
    "react-native-builder-bob": "0.27.0",
    "react-native-document-picker": "^9.3.1",
    "react-native-safe-area-context": "^5.5.1",
    "react-native-screens": "4.11.1",
    "react-native-test-app": "^4.4.0",
    "semantic-release": "^19.0.5",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.3",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "expo": ">=53.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.79.0"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-theme-control.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "app.plugin.js",
    "plugin/build"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNThemeControlCGen",
    "type": "modules",
    "jsSrcsDir": "src/spec",
    "android": {
      "javaPackageName": "eu.reactnativetraining"
    }
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "glob": "^11.0.3",
    "resolve-from": "^5.0.0"
  }
}
